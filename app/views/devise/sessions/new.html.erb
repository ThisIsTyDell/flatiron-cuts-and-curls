<section id="page-title">
  <div class="container">
    <div class="row">
      <div class="col-md-12 title-blue">
        <h2>Log In</h2>
      </div>
    </div>
  </div>
</section>

<section id="blue-container">
  <div class="container">
    <div class="row">

      <div class="col-sm-6 col-sm-offset-3 text-center form-container">

      <ul class="social-icons">
        <li><a class="twitter" href="#" target="_blank"><i class="fa fa-twitter fa-3x"></i></a></li>
        <li><a class="facebook" href="#" target="_blank"><i class="fa fa-facebook fa-3x"></i></a></li>
        <li><a class="google" href="#" target="_blank"><i class="fa fa-google-plus fa-3x"></i></a></li>
      </ul>

      <hr>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name, id: "login-form", class: "form-horizontal")) do |f| %>
        <div class="control-group">
          <div class="controls">
            <div class="row">
              <%= f.email_field :email, autofocus: true, class: "input-xlarge col-xs-8 col-xs-offset-2", placeholder: "Email" %>
            </div>
          </div>
        </div>

        <div class="control-group">
          <div class="controls">
            <div class="row">
              <%= f.password_field :password, autocomplete: "off", class: "input-xlarge col-xs-8 col-xs-offset-2", placeholder: "Password" %>
            </div>
          </div>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="control-group">
          <div class="controls">
            <%= f.submit "Log in", class: "btn-main"%>
          </div>

        </div>
      <% end %>

      <%= render "devise/shared/links" %>

      </div><!--End Col 6-->
    </div><!--End Row-->
  </div><!--End Container-->
</section>
