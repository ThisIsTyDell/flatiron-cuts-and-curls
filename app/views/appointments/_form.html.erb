<%= form_for(appointment) do |f| %>
  <% if current_user.have_stylist? %>
    <%= f.label current_user.stylist.name %>
  <% else %>
    <%= f.label 'Select Stylist' %><br>
  <% end %>
  <%= f.label 'Appointment Day and Time' %>
  <%= f.select :time_slot_id, TimeSlot.all.collect { |t| [ t.name + " " + t.time, t.id ] } %>
  <%= f.submit 'Book Appointment' %>
<% end %>