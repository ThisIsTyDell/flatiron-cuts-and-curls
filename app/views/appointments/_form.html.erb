 <section id="message">
    <div class="container">
        <div class="row">
          <div class="col-sm-10 col-sm-offset-1 text-center form-container">

            <hr>
            <%= form_for(appointment, class: "form-horizontal" ) do |f| %>

            <div class="control-group">
              <div class="controls">
                <div class="row">
                  <%= f.select( :time_slot_id, TimeSlot.available.collect { |t| [ t.name + " " + t.time, t.id ]}, {prompt: "Select A Date and Time"}, {class: "input-xlarge col-xs-8 col-xs-offset-2"} )%>
                </div>
              </div>
            </div>


            <div class="control-group">
              <div class="controls">
               <div class="row">
              <h3><%= f.label 'Service', class: "white" %></h3>
              <%= f.collection_check_boxes(:service_ids, Service.all, :id, :details) do |t| %>
                <div><%= t.check_box + t.text %></div>
              <% end %>
              <%= f.submit 'Book Appointment' %>
            <% end %>
                  </div>
              </div>
            </div>

            <%= link_to 'Cancel', appointments_path %>

        </div><!--End Col 6-->
          
      </div><!--End Row-->
    </div><!--End Container-->
  </section>


 <section id="message">
    <div class="container">
        <div class="row">
          <div class="col-sm-10 col-sm-offset-1 text-center form-container">

             <hr>
             
            <form id="login-form" class="form-horizontal" method="post" action="#">                           
