<%= form_for(service) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :title %><br>
  <%= f.label :price %>
  <%= f.number_field :price %><br>
  <%= f.label :'Select Category' %>
  <%= f.collection_select(:category_id, Category.all, :id, :title, {include_blank: true}) %><br>
  <%= f.label :'or Create New Category' %>
  <%= f.fields_for :category, service.build_category do |category_field| %>
    <%= category_field.text_field :title %>
  <% end %>
  <%= f.submit %>
<% end %>