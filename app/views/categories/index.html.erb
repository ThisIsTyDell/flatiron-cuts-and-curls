<section id="page-title">
  <div class="container">
    <div class="row">
      <div class="col-md-12 title-white">
        <h2>Categories</h2>
      </div>
    </div>
  </div>
</section>

<section id="content">
  <div class="container">
    <div class="row margin-50">
      <div class="col-md-8">
        <% @categories.collect do |category| %>
          <h3><span class="blue"><%= link_to category.title, category_path(category) %> - <%= link_to "Edit", edit_category_path(category) if current_user.admin? || current_user.employee? %></span></h3>
          <ul>
          <% category.services.each do |service| %>
            <li class="lead">
              <%= service.title %> <p class="lead"><%= service.price %></p>
            </li>
          </ul>
          <% end %>
        <% end %>
      </div>

      <div class="col-md-4">
        <%= link_to "New Category", new_category_path, class: "btn-main" if current_user.admin? || current_user.employee? %>
      </div>
   
    </div>
  </div><!--End Row-->
</section> 

<%= render 'layouts/bottom_message' %>